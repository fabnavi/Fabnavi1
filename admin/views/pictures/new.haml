%ul.nav.nav-tabs
  %li=link_to tag_icon(:list, pat(:list)), url(:pictures, :index)
  %li.active=link_to tag_icon(:plus, pat(:new)), url(:pictures, :new)

.tabs-content
  = form_for :picture, url(:pictures, :create), :class => 'form-horizontal' do |f|
    =partial 'pictures/form', :locals => { :f => f }
