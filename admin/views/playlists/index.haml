%ul.nav.nav-tabs
  %li.active=link_to tag_icon(:list, pat(:list)), url(:playlists, :index)
  %li=link_to tag_icon(:plus, pat(:new)), url(:playlists, :new)

.tabs-content
  %table#list.table.table-striped.table-hover.table-condensed
    %thead
      %tr
        %th.header.list-menu
          .dropdown
            %a.list-menu-toggle.dropdown-toggle{:href => '#', :'data-toggle' => :dropdown}
              =tag_icon :magic
              %span.caret
            %ul.list-menu.dropdown-menu{:role => :menu}
              %li.list-menu-wrapper=link_to tag_icon(:check, pat(:select_all)), '#', :id => 'select-all', :class => 'list-menu-link'
              %li.list-menu-wrapper.list-menu-wrapper-disabled
                =link_to tag_icon(:'check-empty', pat(:deselect_all)), '#', :id => 'deselect-all', :class => 'list-menu-link list-menu-link-disabled'
              %li.list-menu-divider.divider
              %li.list-menu-wrapper.list-menu-wrapper-disabled
                =link_to tag_icon(:trash, pat(:delete_selected)), '#', :id => 'delete-selected', :class => 'list-menu-link list-menu-link-disabled'
                .list-menu-popover-delete-selected.popover.right
                  .arrow
                  %h3.popover-title=pat(:delete_selected_title)
                  .popover-content
                    = form_tag url(:playlists, :destroy_many), :method => :delete do
                      =hidden_field_tag :playlist_ids, :'data-delete-many-ids' => true
                      =submit_tag pat(:delete), :class =>'list-menu-popover-delete-selected-btn btn btn-danger btn-small'
                      .btn.btn-default.btn-small.cancel=pat(:cancel)
        %th.header= mat(:playlist, :id)
        %th.header= mat(:playlist, :projectName)
        %th.header= mat(:playlist, :body)
        %th.header= mat(:playlist, :author)
        %th.header= mat(:playlist, :authorId)
        %th.header= mat(:playlist, :author_email)
        %th.header= mat(:playlist, :thumbnail)
        %th.header= mat(:playlist, :created_at)
        %th.header= mat(:playlist, :updated_at)
        %th.header.list-row-action-header

    %tbody
      -@playlists.each do |playlist|
        %tr.list-row
          %td.list-column.list-selectable
            =check_box_tag 'playlist_ids[]', :value => playlist.id, :class => 'list-selectable-checkbox'
          %td.list-column=playlist.id
          %td.list-column=playlist.projectName
          %td.list-column=playlist.body
          %td.list-column=playlist.author
          %td.list-column=playlist.authorId
          %td.list-column=playlist.author_email
          %td.list-column=playlist.thumbnail
          %td.list-column=time_ago_in_words playlist.created_at
          %td.list-column=time_ago_in_words playlist.updated_at
          %td.list-column.list-row-action
            .list-row-action-wrapper
              =link_to tag_icon(:edit), :href => url(:playlists, :edit, :id => playlist.id), :rel => :tooltip, :title => "#{pat(:edit)} playlist", :class => 'list-row-action-wrapper-link'
              =link_to tag_icon(:trash), :rel => :tooltip, :title => "#{pat(:delete)} playlist", :class => 'list-row-action-delete-one list-row-action-wrapper-link'
              .popover.list-row-action-popover-delete-one.left
                .arrow
                %h3.popover-title=pat(:delete, :model => "playlist")
                .popover-content
                  = form_tag url(:playlists, :destroy, :id => playlist.id), :method => :delete do
                    =submit_tag pat(:delete), :class =>'list-row-action-popover-delete-one-btn btn btn-danger btn-small'
                    .btn.btn-default.btn-small.cancel=pat(:cancel)
