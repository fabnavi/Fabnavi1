- error = @playlist.errors.include?(:projectName)
%fieldset.control-group{:class => error ? 'has-error' : ''}
  =f.label :projectName, :class => 'control-label'
  .controls
    =f.text_field :projectName, :class => 'form-control input-large input-with-feedback', :autofocus => true
    %span.help-inline=error ? f.error_message_on(:projectName, :class => 'text-error') : pat(:example)
